{
  "$schema": "../node_modules/@angular/cli/lib/config/schema.json",
  "project": {
    "name": "team-dashboard"
  },
  "apps": [
    {
      "root": "src",
      "outDir": "dist",
      "assets": [
        "assets",
        "favicon.ico"
      ],
      "index": "index.html",
      "main": "main.ts",
      "polyfills": "polyfills.ts",
      "tsconfig": "../tsconfig.json",
      "prefix": "app",
      "styles": [
        "styles.css"
      ],
      "scripts": []
    }
  ],
  "lint": [
    {
      "project": "tsconfig.json",
      "exclude": "**/node_modules/**"
    }
  ],
  "defaults": {
    "styleExt": "css",
    "component": {}
  }
}
